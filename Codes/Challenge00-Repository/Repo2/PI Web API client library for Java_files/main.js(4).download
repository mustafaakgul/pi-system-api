define([
    'jiverscripts/oo/class',
    './models/profileShort_source',
    './views/profileShort_view',
], function(Class, ProfileShortSource, ProfileShortView) {
    return Class.extend(function(protect, _super) {

        this.init = function(options) {
            this.options = options;

            this.profileSource = new ProfileShortSource(options);
            this.profileView = new ProfileShortView(options);

            var main = this;

            this.profileView.addListener('viewReady', function() {
                main.profileSource.loadProfileInformation();
            });
        };

    });
});
